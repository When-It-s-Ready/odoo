<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- action for kitchen display-->
    <record id="kitchen_display_action" model="ir.actions.act_window">
        <field name="name">Kitchen Display</field>
        <field name="res_model">kitchen.display</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="kitchen_ticket_action" model="ir.actions.act_window">
        <field name="name">Kitchen Ticket</field>
        <field name="res_model">kitchen.ticket</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="kitchen_ticket_line_action" model="ir.actions.act_window">
        <field name="name">Kitchen Ticket Line</field>
        <field name="res_model">kitchen.ticket.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="kitchen_display_dashboard_action" model="ir.actions.client">
        <field name="name">Kitchen Display Dashboard</field>
        <field name="tag">kitchen_display_dashboard</field>
        <field name="target">fullscreen</field>
    </record>

    <record id="kitchen_display_view_tree" model="ir.ui.view">
        <field name="name">kitchen.display.view.tree</field>
        <field name="model">kitchen.display</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id="kitchen_ticket_view_tree" model="ir.ui.view">
        <field name="name">kitchen.ticket.view.tree</field>
        <field name="model">kitchen.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="table"/>
                <field name='create_date'/>
                <field name="ticket_status"/>
            </tree>
        </field>
    </record>

    <record id="kitchen_ticket_line_view_tree" model="ir.ui.view">
        <field name="name">kitchen.ticket.line.view.tree</field>
        <field name="model">kitchen.ticket.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name='name'/>
                <field name="qty"/>
                <field name="note"/>
                <field name="line_status"/>
            </tree>
        </field>
    </record>

    <record id='kitchen_display_view_kanban' model='ir.ui.view'>
        <field name='name'>kitchen.display.view.kanban</field>
        <field name='model'>kitchen.display</field>
        <field name='arch' type='xml'>
            <kanban create='false' class="o_kanban_dashboard">
                <field name="name"/>
                <field name="id"/>
                <field name="init_time"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="o_kanban_card_header flex-grow-inf">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary o_kanban_card_header_title_name">
                                        <t t-esc="record.name.value"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col">
                                        <div t-if="record.init_time.value" class="row">
                                                <span>Init Date: <t t-esc="record.init_time.value"/></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <button string="Go to display"
                                            class="btn btn-primary" 
                                            name="open_ui"
                                            type="object"
                                            help="Go To the Kitchen Screen"/>
                                    </div>
                                    <div class="col text-end">
                                        <button string="Reset"
                                            class="btn btn-warning"
                                            name="reset"
                                            type="object"
                                            help="Reset the init time"
                                            />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>