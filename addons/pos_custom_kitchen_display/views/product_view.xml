<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[@name='sale']" position="inside">
                <group name="Ticket category" string="Kitchen Ticket" invisible="not available_in_pos">
                    <field name="ticket_category" widget="many2many_tags" groups="point_of_sale.group_pos_user" invisible="not available_in_pos" string="Ticket Category"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
